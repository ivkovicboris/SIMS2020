<Window x:Class="SIMS2020.FRONT.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS2020.FRONT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LOG IN" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_userName" HorizontalAlignment="Left" Height="40" Margin="250,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270"/>
        <PasswordBox  x:Name="pb_password" HorizontalAlignment="Left" Height="40" Margin="250,230,0,0" VerticalAlignment="Top" Width="270"/>
        <Button Content="LOG IN" Click="LogInButton_Click" HorizontalAlignment="Left" Height="60" Margin="285,330,0,0" VerticalAlignment="Top" Width="210"/>
        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="353,270,0,0" VerticalAlignment="Top"/>
        <Label Content="USERNAME" HorizontalAlignment="Left" Margin="353,180,0,0" VerticalAlignment="Top"/>
        <Label Content="PLEASE ENTER YOUR CREDENTIALS" HorizontalAlignment="Left" Margin="285,70,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
